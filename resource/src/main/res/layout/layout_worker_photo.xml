<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/design_5px">

    <ImageView
        android:id="@+id/iv_worker_photo"
        android:layout_width="@dimen/x_design_115px"
        android:layout_height="@dimen/x_design_115px"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/iv_select_status"
        android:layout_width="@dimen/x_design_40px"
        android:layout_height="@dimen/x_design_40px"
        android:layout_alignRight="@id/iv_worker_photo"
        android:src="@drawable/select_worker_two"/>

</RelativeLayout>