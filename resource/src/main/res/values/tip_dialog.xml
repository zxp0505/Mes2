<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- string -->
    <string name="global_tip">提示</string>
    <string name="global_cancel">取消</string>
    <string name="confirm">确定</string>
    <string name="update_notice_title">更新提示</string>

    <!-- style -->
    <style name="wrap_fill">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CommonDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">stateUnchanged|adjustResize</item>
    </style>

    <style name="tipdialog_container">
        <item name="android:background">@drawable/bg_room_userinfodialog</item>
        <item name="android:minWidth">@dimen/dialog_mini_width</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tipdialog_title" parent="@style/wrap_wrap">
        <item name="android:textSize">25.0sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="tipdialog_content" parent="@style/wrap_wrap">
        <item name="android:textSize">25.0sp</item>
        <item name="android:textColor">@color/tip_dialog_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/design_20px</item>
        <item name="android:layout_marginTop">30.0dip</item>
        <item name="android:layout_marginRight">@dimen/design_20px</item>
        <item name="android:layout_marginBottom">30.0dip</item>
    </style>

    <style name="line_dialog">
        <item name="android:background">@color/line_setting</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="line_tip_dialog" parent="@style/line_dialog">
        <item name="android:background">@color/line_tip_dialog</item>
    </style>

    <style name="tipdialog_btns_container">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">70.0dip</item>
    </style>

    <style name="tipdialogonebtn_confirm">
        <item name="android:textSize">25.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_btn_save_portrait</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/room_user_follow_btn_height</item>
        <item name="android:layout_marginLeft">30.0dip</item>
        <item name="android:layout_marginTop">10.0dip</item>
        <item name="android:layout_marginRight">30.0dip</item>
        <item name="android:layout_marginBottom">10.0dip</item>
    </style>

    <style name="tipdialog_btn" parent="@style/tipdialogonebtn_confirm">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">0.0dip</item>
        <item name="android:layout_marginTop">0.0dip</item>
        <item name="android:layout_marginRight">0.0dip</item>
        <item name="android:layout_marginBottom">0.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="tip_stype" parent="android:Theme">
        <!--<item name="android:windowBackground">@drawable/dialog_box_2</item>//此对话框的背景-->
        <!--<item name="android:windowContentOverlay">@null</item>//对话框是否有遮盖-->
        <item name="android:windowIsTranslucent">false</item>//对话框是否透明
        <item name="android:windowNoTitle">true</item>//对话框无标题
        <item name="android:windowIsFloating">false</item>//对话框是否浮动
        <item name="android:backgroundDimEnabled">false</item>

    </style>


    <!-- color -->
    <color name="tip_dialog_top">#ff97e2d4</color>
    <color name="tip_dialog_content">#ff5f5f5f</color>
    <color name="line_setting">#ffd2d2d2</color>
    <color name="line_tip_dialog">#ffe7e7e7</color>
    <color name="save_portrait_pressed">#ff3c8e86</color>
    <color name="createroom_start_live">#ff8ee2d3</color>
    <color name="room_btn_follow">#ffaaaaaa</color>
    <color name="global_text_left_cell">#ff292f33</color>

    <!-- dimen-->
    <dimen name="room_user_follow_btn_height">45.0dip</dimen>
    <dimen name="tip_dialog_bg_corner">4.0dip</dimen>
    <dimen name="global_line_height">1.0px</dimen>
    <dimen name="dialog_mini_width">@dimen/design_500px</dimen>

</resources>