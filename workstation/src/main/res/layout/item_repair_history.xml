<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_design_2px"
        android:layout_gravity="top"
        android:background="@color/black"
        android:visibility="gone"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y_design_70px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="5.3">

        <View style="@style/cm_line_ve"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_timer"
            style="@style/tv_one"
            android:layout_weight="1.3"
            tools:text="投递时间" />

        <View style="@style/cm_line_ve" />

        <TextView
            android:id="@+id/tv_person"
            style="@style/tv_one"
            tools:text="操作人" />

        <View style="@style/cm_line_ve" />

        <TextView
            android:id="@+id/tv_produce"
            style="@style/tv_one"
            tools:text="工序" />

        <View style="@style/cm_line_ve" />

        <TextView
            android:id="@+id/tv_output_count"
            style="@style/tv_one"
            tools:text="输出数量" />

        <View style="@style/cm_line_ve" />
        <TextView
            android:id="@+id/tv_return_count"
            style="@style/tv_one"
            tools:text="返回数量" />

        <View style="@style/cm_line_ve" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_design_2px"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/y_design_10px"
        android:background="#000"
         />
</FrameLayout>