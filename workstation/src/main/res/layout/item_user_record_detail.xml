<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_design_2px"
        android:layout_gravity="top"
        android:background="@color/black"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="5">

        <View
            style="@style/cm_line_ve"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_order_number"
            style="@style/tv_one_child_three"
            android:layout_weight="0.8"
            android:textSize="@dimen/text_design_25px"
            tools:text="订单编号" />

        <View style="@style/cm_line_ve" />

        <TextView
            android:id="@+id/tv_product_number"
            style="@style/tv_one_child_three"
            android:layout_weight="0.9"
            android:textSize="@dimen/text_design_25px"
            tools:text="生产序号" />

        <View style="@style/cm_line_ve" />

        <TextView
            android:id="@+id/tv_model"
            style="@style/tv_one_child_three"
            android:textSize="@dimen/text_design_25px"
            android:layout_weight="1.3"
            tools:text="型号" />

        <View style="@style/cm_line_ve" />
        <TextView
            android:id="@+id/tv_count"
            style="@style/tv_one_child_three"
            android:textSize="@dimen/text_design_25px"
            android:layout_weight="0.5"
            tools:text="数量" />

        <View style="@style/cm_line_ve" />
        <TextView
            android:id="@+id/tv_report_data"
            style="@style/tv_one_child_three"
            android:textSize="@dimen/text_design_25px"
            android:layout_weight="1.5"
            android:gravity="start"
            android:paddingLeft="@dimen/x_design_10px"
            tools:text="报工记录" />

        <View style="@style/cm_line_ve" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_design_2px"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/y_design_10px"
        android:background="#000" />
</FrameLayout>