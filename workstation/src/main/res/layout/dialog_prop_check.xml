<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x_design_900px"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/y_design_50px"
    android:background="@drawable/shape_makesure_dialog">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y_design_20px"
        android:gravity="left"
        android:text="订单"
        android:textColor="@color/black"
        android:textSize="@dimen/text_design_35px" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_check_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_design_35px"
                android:text="结果" />

            <TextView
                android:id="@+id/tv_check_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_design_35px"
                android:text="合格" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_check_prop_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@color/red"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_check_prop_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_design_35px"
                android:text="标准" />

            <TextView
                android:id="@+id/tv_check_prop_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_design_35px"
                android:text="90" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_check_fanwei_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_design_35px"
                android:text="合格范围" />

            <TextView
                android:id="@+id/tv_check_fanwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_design_35px"
                android:text="合格" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout style="@style/dialog_rl">


        <Button
            android:id="@+id/btn_sure"
            style="@style/dialog_bt_confirm"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>


</LinearLayout>