<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_report_work">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y_design_2px"
        android:layout_gravity="top"
        android:background="@color/black"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y_design_70px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="3">

        <View style="@style/cm_line_ve"
            android:visibility="visible"/>

        <TextView
            style="@style/tv_one"
            android:layout_weight="1"
            android:textSize="@dimen/text_design_33px"
            android:textColor="@color/white_full"
            android:text="工序名称" />

        <View style="@style/cm_line_ve" />

        <TextView
            style="@style/tv_one"
            android:layout_weight="0.6"
            android:textSize="@dimen/text_design_33px"
            android:textColor="@color/white_full"
            android:text="数量" />

        <View style="@style/cm_line_ve" />
        <TextView
            style="@style/tv_one"
            android:layout_weight="1.4"
            android:textSize="@dimen/text_design_33px"
            android:textColor="@color/white_full"
            android:text="异常数量" />

        <View style="@style/cm_line_ve" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_design_2px"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/y_design_10px"
        android:background="#000"
         />
</FrameLayout>