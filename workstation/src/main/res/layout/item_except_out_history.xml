<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_design_2px"
        android:layout_gravity="top"
        android:background="@color/black"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="6">

        <View
            style="@style/cm_line_ve"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_date"
            style="@style/tv_one"
            android:layout_weight="0.9"
            android:paddingBottom="@dimen/y_design_10px"
            android:paddingTop="@dimen/y_design_10px"
            android:textSize="@dimen/text_design_25px"
            tools:text="投递时间" />

        <View
            style="@style/cm_line_ve"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_worker_name"
            style="@style/tv_one"
            android:layout_weight="0.8"
            android:paddingBottom="@dimen/y_design_10px"
            android:paddingTop="@dimen/y_design_10px"
            android:textSize="@dimen/text_design_25px"
            tools:text="操作人" />

        <View
            style="@style/cm_line_ve"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_materail_number"
            style="@style/tv_one"
            android:layout_weight="1.2"
            android:gravity="start"
            android:paddingBottom="@dimen/y_design_10px"
            android:paddingTop="@dimen/y_design_10px"
            android:paddingLeft="@dimen/x_design_10px"
            android:textSize="@dimen/text_design_25px"
            tools:text="物料编号" />

        <View style="@style/cm_line_ve" />

        <TextView
            android:id="@+id/tv_materail_name"
            style="@style/tv_one"
            android:layout_weight="1.3"
            android:gravity="start"
            android:paddingBottom="@dimen/y_design_10px"
            android:paddingTop="@dimen/y_design_10px"
            android:paddingLeft="@dimen/x_design_10px"
            android:textSize="@dimen/text_design_25px"
            tools:text="物料名称" />

        <View style="@style/cm_line_ve" />

        <TextView
            android:id="@+id/tv_count"
            style="@style/tv_one"
            android:layout_weight="0.6"
            android:paddingBottom="@dimen/y_design_10px"
            android:paddingTop="@dimen/y_design_10px"
            android:textSize="@dimen/text_design_25px"
            tools:text="数量" />

        <View style="@style/cm_line_ve" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/y_design_10px"
            android:paddingTop="@dimen/y_design_10px"
            android:layout_weight="1.2">

            <TextView
                android:id="@+id/tv_print"
                style="@style/tv_task"
                android:layout_gravity="center"
                android:background="@drawable/shape_print"
                android:paddingBottom="@dimen/y_design_10px"
                android:paddingTop="@dimen/y_design_10px"
                android:paddingLeft="@dimen/x_design_80px"
                android:paddingRight="@dimen/x_design_80px"
                android:text="打印" />
        </FrameLayout>

        <View style="@style/cm_line_ve" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_design_2px"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/y_design_10px"
        android:background="#000" />
</FrameLayout>