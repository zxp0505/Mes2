<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x_design_1300px"
    android:layout_height="match_parent"
    android:background="@drawable/shape_makesure_dialog"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/y_design_50px">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y_design_20px"
        android:gravity="center"
        android:text="请输入分配数量"
        android:textColor="@color/black"
        android:textSize="@dimen/text_design_35px" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycyle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x_design_650px"
        android:layout_marginTop="@dimen/y_design_20px"
        android:overScrollMode="never"></android.support.v7.widget.RecyclerView>

    <EditText
        android:id="@+id/edit_repair_reason"
        android:layout_width="@dimen/x_design_380px"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y_design_50px"
        android:background="@drawable/shape_bg_editext"
        android:hint="维修原因"
        android:maxEms="100"
        android:maxLines="4"
        android:padding="@dimen/x_design_6px"
        android:textSize="@dimen/text_design_30px"
        android:visibility="gone"/>

    <RelativeLayout
        style="@style/dialog_rl"
        android:layout_marginTop="@dimen/y_design_40px">

        <Button
            android:id="@+id/btn_cancel"
            style="@style/dialog_bt_cancle" />

        <Button
            android:id="@+id/btn_sure"
            style="@style/dialog_bt_confirm" />

    </RelativeLayout>


</LinearLayout>