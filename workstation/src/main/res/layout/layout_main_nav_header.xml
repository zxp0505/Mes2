<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y_nav_header_height"
    android:background="@drawable/shape_nav_bar_head"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/y_activity_vertical_margin"
    android:paddingLeft="@dimen/x_activity_horizontal_margin"
    android:paddingRight="@dimen/x_activity_horizontal_margin"
    android:paddingTop="@dimen/y_activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/iv_nav_user_photo"
        android:layout_width="@dimen/x_design_50px"
        android:layout_height="@dimen/x_design_50px"
        android:layout_marginTop="@dimen/y_activity_vertical_margin"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_main_user_photo"
         />

    <TextView
        android:id="@+id/tv_nav_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x_design_5px"
        android:paddingTop="@dimen/y_nav_header_vertical_spacing"
        android:text="未登录"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


</LinearLayout>
