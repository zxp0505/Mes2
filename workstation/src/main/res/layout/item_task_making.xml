<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y_design_75px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="5.9">

        <View
            style="@style/cm_line_ve"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_materail_name"
            style="@style/tv_one"
            android:layout_weight="1.4"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/x_design_10px"
            tools:text="名称" />

        <View style="@style/cm_line_ve" />

        <TextView
            android:id="@+id/tv_s_reciver_count"
            style="@style/tv_one"
            android:layout_weight="0.9"
            android:gravity="right|center_vertical"
            android:paddingRight="@dimen/x_design_10px"
            tools:text="应收" />

        <View style="@style/cm_line_ve" />

        <TextView
            android:id="@+id/tv_a_reciver_count"
            style="@style/tv_one"
            android:layout_weight="0.9"
            android:gravity="right|center_vertical"
            android:paddingRight="@dimen/x_design_10px"
            tools:text="已收" />
        <View style="@style/cm_line_ve" />

        <TextView
            android:id="@+id/tv_a_repair_count"
            style="@style/tv_one"
            android:layout_weight="0.9"
            android:gravity="right|center_vertical"
            android:paddingRight="@dimen/x_design_10px"
            tools:text="维修" />
        <View style="@style/cm_line_ve" />

        <TextView
            android:id="@+id/tv_a_review_count"
            style="@style/tv_one"
            android:layout_weight="0.9"
            android:gravity="right|center_vertical"
            android:paddingRight="@dimen/x_design_10px"
            tools:text="返工" />

        <View style="@style/cm_line_ve" />

        <TextView
            android:id="@+id/tv_except_count"
            style="@style/tv_one"
            android:layout_weight="0.9"
            tools:text="异常"
            android:visibility="gone"/>

        <View style="@style/cm_line_ve"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_stupls"
            style="@style/tv_one"
            android:layout_weight="0.9"
            android:gravity="right|center_vertical"
            android:paddingRight="@dimen/x_design_10px"
            tools:text="剩余" />

        <View style="@style/cm_line_ve"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_look_tray_info_item"
            android:layout_width="0dp"
            android:layout_height="@dimen/y_design_40px"
            android:layout_weight="1.0"
            android:scaleType="centerInside"
            android:src="@drawable/tray_two"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        style="@style/cm_line_hz"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/y_design_10px"
        android:visibility="visible" />
</FrameLayout>