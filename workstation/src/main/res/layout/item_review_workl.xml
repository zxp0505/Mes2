<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_design_2px"
        android:layout_gravity="top"
        android:background="@color/black"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y_design_90px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="5">
        <View
            style="@style/cm_line_ve"
            android:visibility="visible"
            />
        <ImageView
            android:id="@+id/iv_select_status"
            android:layout_weight="0.6"
            android:layout_width="@dimen/x_design_50px"
            android:layout_height="@dimen/x_design_50px"
            android:scaleType="centerInside"
            android:src="@drawable/select_work"
            />

        <View
            style="@style/cm_line_ve"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/tv_produce"
            style="@style/tv_one"
            android:layout_weight="1.2"
            tools:text="工序" />

        <View style="@style/cm_line_ve" />

        <TextView
            android:id="@+id/tv_remain_count"
            style="@style/tv_one"
            android:layout_weight="0.6"
            tools:text="物料名称sad尖峰时刻大家发附件是打开房间斯柯达姐夫" />

        <View style="@style/cm_line_ve" />

        <TextView
            android:id="@+id/tv_count"
            style="@style/tv_one"
            android:layout_weight="0.8"
            tools:text="物料名称sad尖峰时刻大家发附件是打开房间斯柯达姐夫"
            android:visibility="gone"/>

        <View style="@style/cm_line_ve"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0">

            <ImageView
                android:id="@+id/iv_reduce"
                android:layout_width="@dimen/x_design_70px"
                android:layout_height="@dimen/x_design_70px"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/x_design_10px"
                android:paddingRight="@dimen/x_design_10px"
                android:src="@drawable/reduce" />


            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="@dimen/design_70px"
                android:layout_height="@dimen/y_design_70px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/x_design_10px"
                android:paddingRight="@dimen/x_design_10px"
                android:src="@drawable/add" />

            <TextView
                android:id="@+id/tv_except_count"
                style="@style/tv_task"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:padding="@dimen/x_design_10px"
                android:layout_toLeftOf="@id/iv_add"
                android:layout_toRightOf="@id/iv_reduce"
                android:text="0"
                tools:text="100" />

        </RelativeLayout>

        <View style="@style/cm_line_ve" />
        <EditText
            android:id="@+id/edit_reason"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:textSize="@dimen/text_design_26px"
            android:textColor="@color/black"
            android:hint="请输入原因..."/>
        <View style="@style/cm_line_ve" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_design_2px"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/y_design_10px"
        android:background="#000" />
</FrameLayout>