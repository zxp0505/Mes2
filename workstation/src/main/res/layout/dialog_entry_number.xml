<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x_design_500px"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/y_design_50px"
    android:background="@drawable/shape_makesure_dialog">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入分配数量"
        android:textSize="@dimen/text_design_35px"
        android:layout_marginTop="@dimen/y_design_20px"
        android:textColor="@color/black"
        android:gravity="center" />

    <EditText
        android:id="@+id/edit_number"
        android:layout_width="@dimen/x_design_230px"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_design_30px"
        android:padding="@dimen/x_design_6px"
        android:hint="请输入输出数量"
        android:background="@drawable/shape_bg_editext"
        android:inputType="number|numberDecimal"
        android:layout_marginTop="@dimen/y_design_30px" />

    <RelativeLayout
        style="@style/dialog_rl">

        <Button
            android:id="@+id/btn_cancel"
            style="@style/dialog_bt_cancle" />

        <Button
            android:id="@+id/btn_sure"
            style="@style/dialog_bt_confirm" />
    </RelativeLayout>


</LinearLayout>