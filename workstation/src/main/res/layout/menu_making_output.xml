<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/x_design_50px"
    android:paddingRight="@dimen/x_design_50px">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_design_2px"
        android:layout_gravity="top"
        android:background="@color/black"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y_design_70px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="5">

        <View style="@style/cm_line_ve"
            android:visibility="visible"/>

        <TextView
            style="@style/tv_one"
            android:textSize="@dimen/text_design_33px"
            android:text="投递时间" />

        <View style="@style/cm_line_ve" />

        <TextView
            style="@style/tv_one"
            android:textSize="@dimen/text_design_33px"
            android:text="操作人" />

        <View style="@style/cm_line_ve" />

        <TextView
            style="@style/tv_one"
            android:textSize="@dimen/text_design_33px"
            android:text="工序" />

        <View style="@style/cm_line_ve" />

        <TextView
            style="@style/tv_one"
            android:textSize="@dimen/text_design_33px"
            android:text="输出数量" />

        <View style="@style/cm_line_ve" />
        <TextView
            style="@style/tv_one"
            android:textSize="@dimen/text_design_33px"
            android:text="打印" />

        <View style="@style/cm_line_ve" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_design_2px"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/y_design_10px"
        android:background="#000"
         />
</FrameLayout>