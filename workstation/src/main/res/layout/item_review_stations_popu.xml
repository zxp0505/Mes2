<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/y_design_5px"
    android:paddingTop="@dimen/y_design_5px">

    <ImageView
        android:id="@+id/iv_select_status"
        android:layout_width="@dimen/x_design_30px"
        android:layout_height="@dimen/x_design_30px"
        android:layout_weight="0.7"
        android:scaleType="centerInside"
        android:src="@drawable/select_work" />
    <TextView
        android:id="@+id/tv_name"
        android:paddingLeft="@dimen/x_design_30px"
        style="@style/tv_task"
        tools:text="dddsdfmk"/>



</LinearLayout>