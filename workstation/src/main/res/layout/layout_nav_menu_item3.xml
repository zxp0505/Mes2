<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y_design_80px"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x_design_20px">

        <ImageView
            android:layout_width="@dimen/x_design_50px"
            android:layout_height="@dimen/x_design_50px"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_main_m" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x_design_25px"
            android:text="清盘"
            android:textColor="#000"
            android:textSize="@dimen/text_design_20px" />
    </LinearLayout>


</LinearLayout>
