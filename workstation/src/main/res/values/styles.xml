<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/elco_logo</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme">
        <item name="listPreferredItemHeightSmall">@dimen/design_80px
        </item><!-- menu item height- vary as u need -->
        <item name="android:listDivider">@drawable/shape_divider_list</item>
    </style>

    <!--AppBg背景-->
    <style name="AppBg">
        <item name="android:background">@drawable/ic_app_bg</item>
    </style>

    <style name="MyDialogStyle" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="title_bar_style">
        <item name="android:background">@color/login_bg_title_bar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="detail_title_bar_style" parent="@style/title_bar_style"></style>

    <style name="back_view">
        <item name="android:gravity">right|center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingRight">@dimen/show_padding</item>
        <item name="android:layout_marginLeft">0.0dip</item>
        <item name="android:layout_marginRight">0.0dip</item>
        <item name="android:minHeight">44.0dip</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableLeft">@drawable/btn_back_selector</item>
        <item name="android:drawablePadding">3dip</item>
        <item name="android:textSize">@dimen/text_design_20px</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="detail_back_view" parent="@style/back_view">
        <!-- <item name="android:background">@drawable/ripple_btn_back_left2</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:text">@string/st_back</item>
    </style>

    <style name="login_infor_bt">
        <item name="android:layout_width">@dimen/design_200px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_design_35px</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/btn_main_login</item>
    </style>

    <style name="ProgressHUD" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--selector_back-->
    <style name="iv_back_style">
        <item name="android:layout_width">@dimen/x_design_140px</item>
        <item name="android:layout_height">@dimen/x_design_90px</item>
        <item name="android:paddingLeft">@dimen/x_design_30px</item>
        <item name="android:paddingRight">@dimen/x_design_20px</item>
        <item name="android:src">@drawable/back_three</item>
    </style>

    <!--登陆左下角text one-->
    <style name="login_infor_text_one">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_design_35px</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="fragmnet_bg_one">
        <item name="android:background">@drawable/shape_fragment_bg</item>
    </style>
    <!--任务列表的-->
    <style name="tv_task">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_design_30px</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tv_one">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_design_30px</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="tv_one_child_one" parent="tv_one">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">@dimen/x_design_10px</item>
    </style>
    <style name="tv_one_child_two" parent="tv_one">
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:paddingRight">@dimen/x_design_10px</item>
    </style>
    <style name="tv_one_child_three" parent="tv_one">
        <item name="android:paddingTop">@dimen/y_design_10px</item>
        <item name="android:paddingBottom">@dimen/x_design_10px</item>
    </style>

    <style name="tv_two">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_design_35px</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tv_three">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_design_40px</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tv_four">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_design_24px</item>
        <item name="android:textColor">@color/black_sixty</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/x_design_25px</item>
        <item name="android:paddingRight">@dimen/x_design_25px</item>
        <item name="android:paddingTop">@dimen/x_design_10px</item>
        <item name="android:paddingBottom">@dimen/x_design_10px</item>
    </style>
    <style name="tv_dialog_button_bg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/f_work_font_size</item>
        <item name="android:textColor">@color/white_full</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_main_login</item>
        <item name="android:paddingBottom">@dimen/y_design_15px</item>
        <item name="android:paddingTop">@dimen/y_design_15px</item>
    </style>

    <style name="tv_shape_one">
        <item name="android:textSize">@dimen/text_design_30px</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_makesure</item>
    </style>

    <style name="tv_shape_two">
        <item name="android:textSize">@dimen/text_design_30px</item>
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_blue</item>
    </style>

    <style name="tv_shape_three">
        <item name="android:textSize">@dimen/text_design_30px</item>
        <item name="android:textColor">@color/white_full</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_blue</item>
    </style>

    <style name="iv_one">
        <item name="android:layout_width">@dimen/x_design_45px</item>
        <item name="android:layout_height">@dimen/y_design_45px</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="tv_shape_four">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/y_design_80px</item>
        <item name="android:textSize">@dimen/text_design_30px</item>
        <item name="android:paddingLeft">@dimen/x_design_10px</item>
        <item name="android:paddingRight">@dimen/x_design_10px</item>
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_blue</item>
    </style>

    <declare-styleable name="DonutProgress">
        <attr name="donut_progress" format="float" />
        <attr name="donut_max" format="integer" />

        <attr name="donut_unfinished_color" format="color" />
        <attr name="donut_finished_color" format="color" />

        <attr name="donut_finished_stroke_width" format="dimension" />
        <attr name="donut_unfinished_stroke_width" format="dimension" />

        <attr name="donut_text_size" format="dimension" />
        <attr name="donut_text_color" format="color" />

        <attr name="donut_prefix_text" format="string" />
        <attr name="donut_suffix_text" format="string" />
        <attr name="donut_text" format="string" />

        <attr name="donut_background_color" format="color" />

        <attr name="donut_inner_bottom_text" format="string" />
        <attr name="donut_inner_bottom_text_size" format="dimension" />
        <attr name="donut_inner_bottom_text_color" format="color" />

        <attr name="donut_circle_starting_degree" format="integer" />
        <attr name="donut_show_text" format="boolean" />
        <attr name="donut_inner_drawable" format="reference" />
    </declare-styleable>

    <style name="QQPopAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/right_top_in</item>
        <item name="android:windowExitAnimation">@anim/right_top_out</item>
    </style>
    <!--顶部popup-->
    <style name="PopAnimTwo" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/bottom_right_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_right_out</item>
    </style>
    <style name="AVLoadingIndicatorView.Custom">
        <item name="minWidth">@dimen/x_design_200px</item>
        <item name="maxWidth">@dimen/x_design_200px</item>
        <item name="minHeight">@dimen/y_design_20px</item>
        <item name="maxHeight">@dimen/y_design_20px</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

    <style name="view_line_wide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y_design_10px</item>
        <item name="android:background">@color/c_btn_login</item>
    </style>



</resources>
