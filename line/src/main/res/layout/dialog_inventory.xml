<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/x_design_500px"
    android:layout_height="match_parent"
    android:background="@drawable/shape_makesure_dialog"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/y_design_50px">

    <TextView
        android:id="@+id/tv_materail_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y_design_50px"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_design_35px"
        tools:text="物料编号: 10000" />

    <TextView
        android:id="@+id/tv_materail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y_design_30px"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_design_35px"
        tools:text="物料名称: 10000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y_design_30px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_design_35px"
            tools:text="数量: " />

        <EditText
            android:id="@+id/ed_count"
            android:layout_width="@dimen/x_design_150px"
            android:layout_height="@dimen/y_design_50px"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="@dimen/text_design_30px"
            android:inputType="number" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="@dimen/x_design_160px"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x_design_30px"
            android:layout_marginTop="@dimen/y_design_50px"
            android:background="@drawable/btn_main_login"
            android:padding="@dimen/x_design_12px"
            android:textColor="#fff"
            android:textSize="@dimen/f_work_font_size"
            tools:text="确定" />

        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="@dimen/x_design_160px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x_design_30px"
            android:layout_marginTop="@dimen/y_design_50px"
            android:background="@drawable/btn_main_login"
            android:padding="@dimen/x_design_12px"
            android:textColor="#fff"
            android:textSize="@dimen/f_work_font_size"
            tools:text="确定" />
    </RelativeLayout>


</LinearLayout>