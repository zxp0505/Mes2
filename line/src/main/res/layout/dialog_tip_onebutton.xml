<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/tipdialog_container"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="10.0dip"
        android:background="@drawable/bg_tipdialog_top"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_title"
        style="@style/tipdialog_title"
        android:layout_height="48.0dip"
        android:gravity="center"
        android:text="@string/global_tip" />

    <View style="@style/line_tip_dialog" />

    <TextView
        android:id="@+id/txt_content"
        style="@style/tipdialog_content"
        android:text="" />

    <View style="@style/line_tip_dialog" />

    <Button
        android:id="@+id/btn_confirm"
        style="@style/tipdialog_btn"
        android:layout_width="fill_parent"
        android:layout_height="70.0dip"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_dialog_bottom_selector"
        android:text="@string/global_cancel"
        android:textColor="@color/global_text_left_cell" />
</LinearLayout>