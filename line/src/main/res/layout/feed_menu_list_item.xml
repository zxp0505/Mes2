<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/x_design_1100px"
        android:layout_height="@dimen/y_design_70px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="2">

        <View
            style="@style/line_ve"/>

        <TextView
            android:id="@+id/tv_material_barcode"
            style="@style/tv_feed_list"
            tools:text="仓库发料条码" />
        <View
            style="@style/line_ve"/>
        <TextView
            android:id="@+id/tv_order_product_number"
            style="@style/tv_feed_list"
            tools:text="订单生产编号" />
        <View
            style="@style/line_ve"/>
        <TextView
            android:id="@+id/tv_materail_status"
            style="@style/tv_feed_list"
            tools:text="物料状态"
            android:visibility="gone"/>
        <View
            style="@style/line_ve"
            android:visibility="gone"/>
    </LinearLayout>

    <View
       style="@style/line_hz"
        android:layout_gravity="bottom"
        />
</FrameLayout>