<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y_design_70px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="5">

        <View
            android:layout_width="@dimen/x_design_2px"
            android:layout_height="match_parent"
            android:background="@color/black" />

        <TextView
            android:id="@+id/tv_materail_number"
            style="@style/tv_feed_list"
            tools:text="物料编号" />

        <View
            android:layout_width="@dimen/x_design_2px"
            android:layout_height="match_parent"
            android:background="@color/black" />

        <TextView
            android:id="@+id/tv_materail_name"
            style="@style/tv_feed_list"
            tools:text="物料名称" />

        <View
            android:layout_width="@dimen/x_design_2px"
            android:layout_height="match_parent"
            android:background="@color/black" />

        <TextView
            android:id="@+id/tv_materail_batch_number"
            style="@style/tv_feed_list"
            tools:text="物料批次号" />

        <View
            android:layout_width="@dimen/x_design_2px"
            android:layout_height="match_parent"
            android:background="@color/black" />

        <TextView
            android:id="@+id/tv_count_all"
            style="@style/tv_feed_list"
            tools:text="数量" />

        <View
            android:layout_width="@dimen/x_design_2px"
            android:layout_height="match_parent"
            android:background="@color/black" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_reduce_ware_house"
                android:layout_width="@dimen/x_design_70px"
                android:layout_height="@dimen/x_design_70px"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/x_design_10px"
                android:paddingRight="@dimen/x_design_10px"
                android:src="@drawable/reduce_count" />


            <ImageView
                android:id="@+id/iv_add_ware_house"
                android:layout_width="@dimen/x_design_70px"
                android:layout_height="@dimen/x_design_70px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/x_design_10px"
                android:paddingRight="@dimen/x_design_10px"
                android:src="@drawable/add_count" />

            <TextView
                android:id="@+id/tv_count_inware"
                style="@style/tv_feed_two_list_item_two"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/x_design_10px"
                android:layout_marginRight="@dimen/x_design_10px"
                android:layout_toLeftOf="@id/iv_add_ware_house"
                android:layout_toRightOf="@id/iv_reduce_ware_house"
                android:text="0"
                tools:text="100" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/x_design_2px"
            android:layout_height="match_parent"
            android:background="@color/black" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/design_2px"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/design_10px"
        android:background="#000" />
</FrameLayout>