<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x_design_850px"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_feed_three_dialog">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定切换当前影片?"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y_design_20px"
        android:layout_marginBottom="@dimen/y_design_20px"
        android:textColor="#fff"
        android:textSize="@dimen/text_design_35px" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_dialog_title"
        android:background="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_design_80px"
        android:layout_below="@id/tv_dialog_title"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:gravity="center"
            android:textSize="@dimen/text_design_35px"
            android:textColor="#fff"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_dialog_title"
            android:background="@color/black"
            />
        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确认"
            android:gravity="center"
            android:textSize="@dimen/text_design_35px"
            android:textColor="#fff"/>

    </LinearLayout>


</RelativeLayout>