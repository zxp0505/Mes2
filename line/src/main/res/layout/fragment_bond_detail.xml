<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_bond_detail_title" />

    <TextView
        android:id="@+id/tv_package"
        style="@style/tv_one"
        android:paddingLeft="@dimen/x_design_20px"
        android:paddingTop="@dimen/y_design_10px"
        android:paddingRight="@dimen/y_design_20px"
        android:paddingBottom="@dimen/y_design_10px"
        tools:text="开始叫对方还是束带结发好时代峰峻啊" />

    <include
        layout="@layout/menu_bond_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x_design_20px"
        android:layout_marginLeft="@dimen/x_design_10px"
        android:layout_marginRight="@dimen/x_design_10px"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycyleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x_design_10px"
        android:layout_marginRight="@dimen/x_design_10px"
        android:layout_marginTop="@dimen/x_design_10px"
        android:overScrollMode="never"></android.support.v7.widget.RecyclerView>
</LinearLayout>