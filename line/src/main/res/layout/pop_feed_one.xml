<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/x_design_650px"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_feed_three_dialog"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/y_design_30px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/y_design_20px"
            android:layout_marginTop="@dimen/y_design_60px"
            android:textColor="#000"
            android:textSize="@dimen/text_design_35px"
            tools:text="确定切换当前影片?" />

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="@dimen/x_design_200px"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y_design_50px"
            android:background="@drawable/bg_share_work"
            android:gravity="center"
            android:padding="@dimen/x_design_30px"
            android:text="确定"
            android:textColor="#000"
            android:textSize="@dimen/text_design_35px" />
    </LinearLayout>

</LinearLayout>