<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/tipdialog_container"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="10.0dip"
        android:background="@drawable/bg_tipdialog_top"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_title"
        style="@style/tipdialog_title"
        android:layout_height="30.0dip"
        android:layout_marginTop="5.0dip"
        android:gravity="bottom"
        android:text="@string/global_tip" />

    <TextView
        android:id="@+id/txt_content"
        style="@style/tipdialog_content"
        android:text="@string/app_name"/>

    <View style="@style/line_tip_dialog" />

    <LinearLayout
        style="@style/tipdialog_btns_container"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            style="@style/tipdialog_btn"
            android:background="@drawable/bg_btn_left_dialog_selector"
            android:text="@string/global_cancel"
            android:textColor="@color/global_text_left_cell" />

        <View
            style="@style/line_tip_dialog"
            android:layout_width="@dimen/global_line_height"
            android:layout_height="fill_parent" />

        <Button
            android:id="@+id/btn_confirm"
            style="@style/tipdialog_btn"
            android:background="@drawable/bg_btn_right_dialog_selector"
            android:text="@string/confirm"
            android:textColor="@color/global_text_left_cell" />
    </LinearLayout>
</LinearLayout>