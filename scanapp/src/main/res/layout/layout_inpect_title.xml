<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_date"
        style="@style/tv_one"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_search_by_date"
        app:layout_constraintBottom_toBottomOf="@+id/tv_search_by_date"
        android:layout_marginLeft="@dimen/x_design_20px"
        android:text="日期搜索"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_search_by_date"
        style="@style/tv_shape_one"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/x_design_20px"
        android:text="日期搜索"
        android:visibility="visible" />
</android.support.constraint.ConstraintLayout>